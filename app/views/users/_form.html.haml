.container-fluid
  .row
    .col-md-offset-3.col-md-6
      = simple_form_for @user do |f|
        = f.input :email, as: :email
        - if @user.new_record?
          = f.input :password, as: :password
          = f.input :password_confirmation, as: :password
        = f.input :full_name
        = f.input :birth_date, as: :date
        = f.input :bio, as: :text
        = f.input :avatar, as: :file
        = f.button :submit